@model IEnumerable<FurnitureStore.Models.Manufacture>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyDetails)
            </th>
            <th>
                @if (User.Identity.IsAuthenticated)
                {
                <th>
                    Manage
                </th>
            }
                </th>
            </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ManufacturerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyDetails)
            </td>
            @if (User.Identity.IsAuthenticated)
            {
                <th>
                    Manage
                </th>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompanyName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CompanyName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CompanyName">Delete</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>
